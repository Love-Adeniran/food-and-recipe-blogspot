<%- include('./partials/head') %> 
<div class="container  justify-content-center p-5">
    <div class="container border  border-2  mx-auto w-75 shadow">
        <h1 class="text-danger text-center">Sign Up</h1>
        <div class="container p-3 mx-auto border-start border-danger border-end shadow w-75 bg-warning">
            <form action="/signUp" method="post">
                <input type="text" placeholder="Enter your firstname" class="form-control my-2" name="firstname">
                <input type="text" placeholder="Enter your Lastname" class="form-control my-2" name="lastname">
                <input type="text" placeholder="Enter your email" class="form-control my-2" name="email">
                <input type="text" placeholder="Enter your password" class="form-control my-2" name="password">
                <!-- <input type="text" placeholder="Enter your confirm password" class="form-control my-2" name="confirmPassword"> -->
                <button class="btn btn-outline-success text-light my-2">sign Up</button>
                <a href="/" class="btn btn-outline-danger text-light my-2">Back</a>
            </form>
        </div>
    </div>
</div>




